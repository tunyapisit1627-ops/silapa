@model RegisterEditViewModel
@{
    ViewData["Title"] = "แก้ไขข้อมูลผู้ใช้งานระบบ";
}

<body class="hold-transition sidebar-mini">
    <div class="card">
        <form asp-action="RegisterEdit" asp-controller="Account" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden>
            <div class="card card-info">
                <div class="card-header">
                    <h2 class="card-title">แก้ไขข้อมูลผู้ใช้งานระบบ</h2>
                </div>
                <div class="card-body">
                    <!-- Main content -->
                    <section class="content">
                        <div class="container-fluid">
                            <div class="card card-default">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">คำนำหน้าชื่อ</label>
                                        <div class="col-sm-10">
                                            <input asp-for="titlename" class="form-control" />
                                            <span asp-validation-for="titlename" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">ชื่อ</label>
                                        <div class="col-sm-10">
                                            <input asp-for="FirstName" class="form-control" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">นามสกุล</label>
                                        <div class="col-sm-10">
                                            <input asp-for="LastName" class="form-control" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">เบอร์ติดต่อ</label>
                                        <div class="col-sm-10">
                                            <input asp-for="tel" class="form-control" />
                                            <span asp-validation-for="tel" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">CurrentPassword</label>
                                        <div class="col-sm-10">
                                            <div class="input-group">
                                                <input asp-for="CurrentPassword" class="form-control" type="password"
                                                    id="currentPassword" />
                                                <div class="input-group-append">
                                                    <button type="button" class="btn btn-outline-secondary"
                                                        onclick="togglePasswordVisibility('currentPassword', this)">Show</button>
                                                </div>
                                            </div>
                                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">NewPassword</label>
                                        <div class="col-sm-10">
                                            <div class="input-group">
                                                <input asp-for="NewPassword" class="form-control" type="password"
                                                    id="newPassword" />
                                                <div class="input-group-append">
                                                    <button type="button" class="btn btn-outline-secondary"
                                                        onclick="togglePasswordVisibility('newPassword', this)">Show</button>
                                                </div>
                                            </div>
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="inputEmail3"
                                            class="col-sm-2 col-form-label">ConfirmNewPassword</label>
                                        <div class="col-sm-10">
                                            <div class="input-group">
                                                <input asp-for="ConfirmNewPassword" class="form-control" type="password"
                                                    id="confirmNewPassword" />
                                                <div class="input-group-append">
                                                    <button type="button" class="btn btn-outline-secondary"
                                                        onclick="togglePasswordVisibility('confirmNewPassword', this)">Show</button>
                                                </div>
                                            </div>
                                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row" id="competitionDropdown" 
     style="@(Model.a_id == "Manager" ? "display:flex;" : "display:none;")">
     
    <label asp-for="m_id" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10 select2-purple">
        @if (User.IsInRole("Admin"))
        {
            @Html.ListBoxFor(m => m.m_id, ViewBag.CompetitionList as SelectList, 
    new { @class = "select2", style="width: 100%;" })
        }
        else
        {
           
            @Html.ListBoxFor(m => m.m_id, ViewBag.CompetitionList as SelectList, 
    new { @class = "select2", style="width: 100%;", @disabled="disabled" })
        }
        
        <span asp-validation-for="m_id" class="text-danger"></span>
    </div>
</div>
                                </div>
                            </div>
                    </section>
                    <div class="card-footer">
                        <button type="submit" value="Submit" class="btn btn-info">บันทึกข้อมูล</button>
                        <button asp-action="frmschoolList" asp-controller="Admin"
                            class="btn btn-default float-right">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
<link type="text/css" href="~/css/css/ui-lightness/jquery-ui-1.8.10.custom.css" rel="stylesheet" />
<script type="text/javascript" src="~/js/jquery-1.4.4.min.js"></script>
<script type="text/javascript" src="~/js/jquery-ui-1.8.10.offset.datepicker.min.js"></script>
<script src="~/plugins/jquery/jquery.min.js"></script>
<script>$(function () {
        $('.select2').select2()
    });
</script>
<script>
    function togglePasswordVisibility(inputId, button) {
        const passwordInput = document.getElementById(inputId);
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            button.textContent = "Hide";
        } else {
            passwordInput.type = "password";
            button.textContent = "Show";
        }
    }
</script>
