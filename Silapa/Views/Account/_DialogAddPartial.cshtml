@model RegisterViewModel

@using Syncfusion.EJ2

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Id" type='text' />
                <span class="e-float-line"></span>
                <label asp-for="Id" class="e-float-text e-label-top" >Order ID</label>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="titlename" />
                <span class="e-float-line"></span>
                <label asp-for="titlename" class="e-float-text e-label-top">คำนำหน้า</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="FirstName" />
                <span class="e-float-line"></span>
                <label asp-for="FirstName" class="e-float-text e-label-top">ชื่อ</label>
            </div>
            
        </div>
        <div class="form-group col-md-6">
           <div class="e-float-input e-control-wrapper">
                <input asp-for="LastName" />
                <span class="e-float-line"></span>
                <label asp-for="LastName" class="e-float-text e-label-top">สกุล</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <textarea asp-for="Email"></textarea>
                <span class="e-float-line"></span>
                <label asp-for="Email" class="e-float-text e-label-top">Email</label>
            </div>
        </div>
    </div>
</div>
<ejs-scripts></ejs-scripts>