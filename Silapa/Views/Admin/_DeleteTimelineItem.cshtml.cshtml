@model TimelineItem

<form asp-controller="Admin" asp-action="DeleteTimeline" id="deleteTimelineForm">
    <div class="modal-header">
        <h5 class="modal-title">ยืนยันการลบ</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" name="id" value="@Model.EventID" />
        <p>คุณแน่ใจหรือไม่ว่าต้องการลบรายการนี้?</p>
        <dl class="row">
            <dt class="col-sm-3">หัวข้อ</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
        </dl>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
        <button type="submit" class="btn btn-danger">ยืนยันการลบ</button>
    </div>
</form>