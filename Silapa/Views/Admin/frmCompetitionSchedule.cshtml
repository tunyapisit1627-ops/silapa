    private string FormatThaiDateRange(string dateRangeString)
    {
        if (string.IsNullOrEmpty(dateRangeString)) return "-";
        try
        {
            var parts = dateRangeString.Split(new string[] { " - ", "-" }, StringSplitOptions.RemoveEmptyEntries);
            string[] formats = { "MM/dd/yyyy","dd/MM/yyyy" }; 
            var provider = System.Globalization.CultureInfo.InvariantCulture;
            var thai = new System.Globalization.CultureInfo("th-TH");

            if (DateTime.TryParseExact(parts[0].Trim(), formats, provider, System.Globalization.DateTimeStyles.None, out DateTime start))
            {
                DateTime end = start;
                if (parts.Length > 1) DateTime.TryParseExact(parts[1].Trim(), formats, provider, System.Globalization.DateTimeStyles.None, out end);

                if (start.Date == end.Date) return start.ToString("d MMMM yyyy", thai);
                if (start.Month == end.Month && start.Year == end.Year) return $"{start.Day}-{end.Day} {end.ToString("MMMM yyyy", thai)}";
                return $"{start.ToString("d MMM", thai)} - {end.ToString("d MMM yyyy", thai)}";
            }
            return dateRangeString;
        }
        catch { return dateRangeString; }
    }
}

