@page
@model Silapa.Controllers.MultiColumnHtmlText

@section ControlsSection{

    <div class="control-section">
        @{
            Html.BeginForm("multicolumnhtmltext", "pdf", FormMethod.Post);
            {
                <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <table width="100%">
                                <tr>
                                    <td>
                                        Click the button to view an PDF document generated by Essential PDF. Please note
                                        that Adobe Reader or its equivalent is required to view the resultant document.
                                    </td>
                                </tr>
                                <tr>

                                    <td align="left">
                                        <br/>
                                        <input type="submit" class="e-btn" value="Convert to PDF" style="width:150px; text-transform:capitalize"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                Html.EndForm();
            }
        }
</div>
}