@model registerdirector
@{
    // (ดึงข้อมูลจาก ViewBag ที่ Controller ส่งมา)
    var activeSystem = ViewBag.ActiveSystem as setupsystem; 
    ViewData["Title"] = (activeSystem != null) ? activeSystem.name : "สมัครกรรมการตัดสิน";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">สมัครกรรมการตัดสิน</h2>
    </div>
    <div class="card-body">
        
        <form asp-action="frmregisterdirector" asp-controller="Home" method="post" enctype="multipart/form-data">
            
            <input asp-for="id" hidden />
            <input asp-for="ProfileImageUrl" hidden />
            <input asp-for="lastupdate" hidden />
            <input asp-for="status" hidden />
            <input asp-for="SettingID" hidden />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <section class="content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">ข้อมูลผู้สมัคร</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="name"></label>
                                    <input type="text" asp-for="name" class="form-control">
                                    <span asp-validation-for="name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="position">ตำแหน่ง/โรงเรียน (เช่น ครู โรงเรียนจักราชวิทยา)</label>
                                    <input type="text" asp-for="position" class="form-control">
                                    <span asp-validation-for="position" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="experience"></label>
                                    <textarea asp-for="experience" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="experience" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="tel"></label>
                                    <input type="text" asp-for="tel" class="form-control">
                                    <span asp-validation-for="tel" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="g_id">หมวดหมู่/กลุ่มสาระ</label>
                                    <select asp-for="g_id" class="form-control select2" 
                                            asp-items="@ViewBag.levelData"
                                            onchange="loadItemsBasedOnCategory(this.value)">
                                        <option value="">-- กรุณาเลือกหมวดหมู่ --</option>
                                    </select>
                                    <span asp-validation-for="g_id" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="c_id">รายการ</label>
                                    <select asp-for="c_id" class="form-control select2">
                                        <option value="">-- กรุณาเลือกรายการแข่งขัน --</option>
                                    </select>
                                    <span asp-validation-for="c_id" class="text-danger"></span>
                                </div>
                            </div>
                            </div>
                        </div>

                    <div class="col-md-6">
                        <div class="card card-secondary">
                            <div class="card-header">
                                <h3 class="card-title">รูปภาพ (สำหรับบัตรกรรมการ)</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="ProfileImage"></label>
                                    <input type="file" asp-for="ProfileImage" class="form-control" accept="image/*"
                                        onchange="previewImage(event)">
                                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                                    <small class="form-text text-muted">ขนาดไม่เกิน 5MB (ไฟล์ .jpg, .png, .gif เท่านั้น)</small>
                                    <div class="image-preview mt-2">
                                        <img id="preview" class="preview" alt="Image Preview">
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">ยกเลิก</a>
                        <input type="submit" value="ส่งข้อมูลเพื่อสมัครกรรมการ" class="btn btn-success float-right">
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>

<style>
    .preview {
        width: 128px;
        height: 128px;
        border: 2px solid #ddd;
        border-radius: 8px;
        object-fit: cover;
        display: none;
        /* ซ่อนภาพก่อนเลือก */
    }
</style>

@section Scripts {
    <script>
        $(function () {
            // 1. เปิดใช้งาน Select2
            $('.select2').select2({
                theme: 'bootstrap4' // (แนะนำ) ทำให้หน้าตาเข้ากับ AdminLTE
            });
        });

        // 2. ฟังก์ชัน Preview รูป
        function previewImage(event) {
            const preview = document.getElementById('preview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block'; // แสดงภาพเมื่อเลือกไฟล์
                };
                reader.readAsDataURL(file);
            } else {
                preview.style.display = 'none'; // ซ่อนภาพเมื่อยกเลิกการเลือกไฟล์
            }
        }

        // 3. ฟังก์ชันโหลด Dropdown (รายการแข่งขัน)
        function loadItemsBasedOnCategory(categoryId) {
            const itemsDropdown = document.getElementById('c_id');
            
            // (เคลียร์รายการเก่า)
            itemsDropdown.innerHTML = '<option value="">กำลังโหลด...</option>';

            if (!categoryId) {
                itemsDropdown.innerHTML = '<option value="">-- กรุณาเลือกหมวดหมู่ก่อน --</option>';
                return;
            }

            // ส่ง request ไปยัง server
            fetch(`/Home/GetItemsByCategory?categoryId=${categoryId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    // ล้างตัวเลือกเก่า
                    itemsDropdown.innerHTML = '<option value="">-- กรุณาเลือกรายการแข่งขัน --</option>';

                    // เพิ่มตัวเลือกใหม่จากข้อมูลที่ได้รับ
                    if (data && data.length > 0) {
                        data.forEach(item => {
                            const option = document.createElement('option');
                            option.value = item.value || ""; 
                            option.text = item.text || ""; 
                            itemsDropdown.appendChild(option);
                        });
                    } else {
                        itemsDropdown.innerHTML = '<option value="">-- ไม่พบรายการแข่งขันในหมวดนี้ --</option>';
                    }
                })
                .catch(error => {
                    console.error('Error fetching items:', error);
                    itemsDropdown.innerHTML = '<option value="">-- เกิดข้อผิดพลาด --</option>';
                });
        }
    </script>
}