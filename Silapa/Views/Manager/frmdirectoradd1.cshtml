@model IEnumerable<referee>
@{
    ViewData["Title"] = "รายชื่อคณะกรรมการ";
    int i = 1;
    IList<category> categories = ViewBag.list;
}
<div class="card">
    <div class="card-header">
        <h2 class="card-title">ข้อมูลรายชื่อคณะกรรมการ @ViewBag.c_name (@ViewBag.r_name)</h2>
        <input id="g_id" name="g_id" value="@ViewBag.g_id" hidden>
        <input id="c_id" name="c_id" value="@ViewBag.c_id" hidden>
        <input id="r_name" name="r_name" value="@ViewBag.r_name" hidden>
        <input id="duty" name="duty" value="@ViewBag.duty" hidden>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>รูปภาพ</th>
                    <th>
                        ชื่อ-สกุล
                    </th>
                    <th>
                        ตำแหน่ง/โรงเรียน
                    </th>
                    <th>
                        บทบาทหน้าที่
                    </th>
                    <th>
                        <a href="javascript:void(0)" class="btn btn-outline-success" data-toggle="modal"
                            data-target="#createNewModal">
                            <i class="fa fa-plus-square"></i> Create New
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr data-widget="expandable-table" aria-expanded="false">
                        <td align="center">
                            @i
                        </td>
                        <td>
                            <img src="@item.ImageUrl" width="80" height="80" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td align="center">
                            @Html.DisplayFor(modelItem => item.position)
                        </td>
                        <td align="center">
                            @Html.DisplayFor(modelItem => item.role)
                        </td>
                        <td>
                            <button class="btn btn-primary btn-sm edit-button" data-id="@item.id">แก้ไข</button>
                            <button class="btn btn-danger btn-sm delete-button" data-id="@item.id">ลบ</button>
                        </td>
                    </tr>
                    i += 1;

                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="createNewModal" tabindex="-1" role="dialog" aria-labelledby="createNewModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createNewModalLabel">เพิ่มข้อมูลใหม่</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createNewForm">
                    @foreach (var dr in categories)
                    {   
                        if(dr.Id==ViewBag.c_id)
                        {
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" name="categories" id="checkbox_@dr.Id" value="@dr.Id"
                                    checked>
                                <label for="checkbox_@dr.Id" class="custom-control-label">@dr.Name</label>
                            </div>
                        </div>
                        }else
                        {
                       <!-- <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" name="categories" id="checkbox_@dr.Id" value="@dr.Id"
                                    >
                                <label for="checkbox_@dr.Id" class="custom-control-label">@dr.Name</label>
                            </div>
                        </div>-->
                        }
                    }
                    <div class="form-group">
                        <label for="name">ชื่อ-สกุล</label>
                        <input id="id" name="id" hidden>
                        <input type="text" class="form-control" id="name" name="Name" required>
                        <small class="form-text text-danger" style="display:none;"
                            id="nameError">กรุณากรอกหัวข้อชื่อคณะกรรมการ</small>
                    </div>
                   <div class="form-group">
                    <label for="role">บทบาทหน้าที่</label>
                        <select class="form-control select2" id="role" name="role" required>
                             <option value="">กรุณาเลือกบทบาท</option>
                             <option value="ประธาน">ประธาน</option>
                             <option value="รองประธาน">รองประธาน</option>
                             <option value="กรรมการ">กรรมการ</option>
                             <option value="กรรมการและเลขานุการ">กรรมการและเลขานุการ</option>
                        </select>
                        <small class="form-text text-danger" style="display:none;" id="dutyError">กรุณาเลือกบทบาทหน้าที่</small>
                    </div>
                    <div class="form-group">
                        <label for="position">ตำแหน่ง/โรงเรียน</label>
                        <input type="text" class="form-control" id="position" name="position" required>
                        <small class="form-text text-danger" style="display:none;"
                            id="dutyError">ตำแหน่ง/โรงเรียน</small>
                    </div>
                    <!-- Image upload with cropping -->
                    <div class="form-group">
                        <label for="imageUpload">อัพโหลดรูปภาพ</label>
                        <input type="file" class="form-control" id="imageUpload" accept="image/*">
                        <div id="imagePreview" class="mt-2" style="display:none;">
                            <img id="imagePreviewImg" src="" alt="Preview" style="max-width: 100%;">
                        </div>
                        <small class="form-text text-danger" style="display:none;"
                            id="imageError">กรุณาเลือกและครอบภาพ</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">ปิด</button>
                <button id="saveButton" class="btn btn-primary">บันทึก</button>
            </div>
        </div>
    </div>
</div>
