    $('#createNewModal').on('hidden.bs.modal', function () {
        $(this).find('form')[0].reset();
    });
</script>
<script>

    let cropper;
    let croppedImageDataURL = "";

    $(document).ready(function () {
        // Handle image upload
        $('#imageUpload').on('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    const image = document.getElementById('imagePreviewImg');
                    image.src = event.target.result;
                    $('#imagePreview').show();

                    // Initialize Cropper.js
                    if (cropper) {
                        cropper.destroy();
                    }
                    cropper = new Cropper(image, {
                        aspectRatio: 1, // Aspect ratio 1:1 (Square)
                        viewMode: 1,
                        responsive: true,
                        autoCropArea: 0.65,
                        crop: function (event) {
                            // You can get the cropped data here if needed
                            croppedImageDataURL = cropper.getCroppedCanvas().toDataURL();
                        }
                    });
                };
                reader.readAsDataURL(file);
            }
        });

        // Handle form submission and save
        $('#saveButton').on('click', function () {
            const id = parseInt($("#id").val()) || 0; // ถ้าไม่มีค่าให้เป็น 0
            const name = $('#name').val().trim();
            const c_id = $('#c_id').val().trim();
            const g_id = $('#g_id').val().trim();
            const role = $('#role').val().trim();
            const position = $('#position').val();
            const r_name = $('#r_name').val();
            const duty = $('#duty').val();

            const selectedCategories = [];
            $('input[name="categories"]:checked').each(function () {
                selectedCategories.push($(this).val()); // ดึงค่า value ของ Checkbox ที่ถูกเลือก
            });

            // Validate inputs
            if (!name || !role || !position) {
                alert("กรุณากรอกข้อมูลทั้งหมด");
                return;
            }

            /* if (!croppedImageDataURL) {
                 alert("กรุณาครอบภาพก่อนบันทึก");
                 return;
             }*/

            const formData = {
                id: id,
                c_id: c_id,
                g_id: g_id,
                r_name:r_name,
                duty:duty,
                name: name,
                role: role,
                position: position,
                ImageUrl: croppedImageDataURL, // Include the cropped image
                categories: selectedCategories
            };

            // Submit the data via AJAX (example for Save)
            $.ajax({
                url: '/Manager/SaveReferee',
                type: 'POST',
                data: JSON.stringify(formData),
                contentType: 'application/json',
                success: function (response) {
                    if (response.success) {
                        alert("บันทึกข้อมูลสำเร็จ");
                        $('#createNewModal').modal('hide');
                        location.reload(); // Reload the page to reflect the changes
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("เกิดข้อผิดพลาดในการบันทึก");
                }
            });
        });
    });
    // Event: When clicking the edit button
$('.edit-button').on('click', function () {
    const id = $(this).data('id');

    // Fetch data by ID
    $.ajax({
        url: '/Manager/GetRefereeById', // API endpoint to get data
        type: 'GET',
        data: { id: id },
        success: function (response) {
            if (response.success) {
                // Populate form with the fetched data
                $('#id').val(response.data.id);
                $('#name').val(response.data.name);
                $('#role').val(response.data.role).trigger('change');
                $('#position').val(response.data.position);

                

                // If image exists, show it
                if (response.data.imageUrl) {
                    $('#imagePreview').show();
                    $('#imagePreviewImg').attr('src', response.data.imageUrl);
                }

                // Open modal
                $('#createNewModal').modal('show');
            } else {
                alert("ไม่พบข้อมูล");
            }
        },
        error: function () {
            alert("เกิดข้อผิดพลาดในการดึงข้อมูล");
        }
    });
});
$('.delete-button').on('click', function () {
    const id = $(this).data('id');

    if (confirm("คุณต้องการลบข้อมูลนี้หรือไม่?")) {
        // Delete request
        $.ajax({
            url: '/Manager/DeleteReferee1',
            type: 'POST',
            data: JSON.stringify({ id: id }),
            contentType: 'application/json',
            success: function (response) {
                if (response.success) {
                    alert("ลบข้อมูลสำเร็จ");
                    location.reload(); // Refresh the page
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert("เกิดข้อผิดพลาดในการลบข้อมูล");
            }
        });
    }
});
document.getElementById('role').addEventListener('change', function() {
    var roleError = document.getElementById('dutyError');
    if (this.value) {
        roleError.style.display = 'none';
    } else {
        roleError.style.display = 'block';
    }
});
</script>
