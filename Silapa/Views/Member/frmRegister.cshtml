                                    <a href="@Url.Action("frmRegister_del", "Member", new { id = @dt.id ,c_id=ViewBag.currentTypelevel})" class="btn btn-block bg-gradient-danger" onclick="return confirm('คุณแน่ใจหรือไม่ว่าต้องการยกเลิกการลงทะเบียน?');">ยกเลิกการลงทะเบียน</a>
                                 }
                                }else{
                                    if(ViewBag.statusdateregister=="1"){
                                    <a href="@Url.Action("frmRegister_add", "Member", new { id = 0,c_id=@item.Id,c_name=@item.Name,type=@item.type,t=@item.teacher,s=@item.student })" class="btn btn-block bg-gradient-danger">ยังไม่ได้ลงทะเบียน</a>
                                    }  else{
                                        <label>ไม่อยู่ในช่วงเวลาลงทะเบียน</label>
                                    }         
                                     
                                }
                            }catch{
                                    if(ViewBag.statusdateregister=="1"){
                                    <a href="@Url.Action("frmRegister_add", "Member", new { id = 0,c_id=@item.Id,c_name=@item.Name,type=@item.type,t=@item.teacher,s=@item.student })" class="btn btn-block bg-gradient-danger">ยังไม่ได้ลงทะเบียน</a>
                                    }  else{
                                        <label>ไม่อยู่ในช่วงเวลาลงทะเบียน</label>
                                    }  
                            }                         
                        </td>
                    </tr>
                    }else{
                        if(dt!=null)
                        {
                    <tr data-widget="expandable-table" aria-expanded="false">
                        <td align="center">
                            @i
                        </td>
                        <td align="center">
                            @Html.DisplayFor(modelItem => item.Id)
