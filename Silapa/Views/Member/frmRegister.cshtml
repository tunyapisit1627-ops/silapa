                            @try{
                                
                                if(dt!=null){
                                    <a href="@Url.Action("frmRegister_add", "Member", new { id = @dt.id,c_id=@item.Id,c_name=@item.Name,type=@item.type,t=@item.teacher,s=@item.student })" class="btn btn-block bg-gradient-primary" >แก้ไขข้อมูล</a>
