                            @Html.DisplayFor(modelItem => item.type)
                        </td>
                        <td align="center">
                            @if(registerdetails!=null)
                    {
                        //var dt=models.Where(x=>x.c_id==item.Id).FirstOrDefault();
                        try{
                              cs=registerdetails.Registerdetail.Count(x=>x.Type=="student" &&x.h_id==dt.id);
                        }catch{
                            cs=0;
                        }
                         var tts=(totals-cs);
                        if(totals==cs)
                        {
                           
                            <span class="badge bg-success">@cs (ครบ) </span>
                        }else{
                            <span class="badge bg-danger">@cs (ยังไม่ครบขาด @tts คน)</span>
                        }
                        
                    }
                        </td>
                        <td align="center">
