                    {
                        try{ct=registerdetails.Registerdetail.Count(x=>x.Type=="teacher" &&x.h_id==dt.id);}catch{ct=0;}
                         var tts=(totalt-ct);
                        if(totalt==ct)
                        {
                           
                            <span class="badge bg-success">@ct (ครบ) </span>
                        }else{
                            <span class="badge bg-danger">@ct (ยังไม่ครบขาด @tts คน)</span>
                        }
                        
                    }
                        </td>
