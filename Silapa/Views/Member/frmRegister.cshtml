                                 if(ViewBag.statusdateregister=="1"){
                                    <a href="@Url.Action("frmRegister_del", "Member", new { id = @dt.id ,c_id=ViewBag.currentTypelevel})" class="btn btn-block bg-gradient-danger" onclick="return confirm('คุณแน่ใจหรือไม่ว่าต้องการยกเลิกการลงทะเบียน?');">ยกเลิกการลงทะเบียน</a>
