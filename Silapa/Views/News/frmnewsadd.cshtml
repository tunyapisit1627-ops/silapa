@model news
@{
    ViewData["Title"] = "เพิ่มข้อมูลข่าวประชาสัมพันธ์";
}

<body class="hold-transition sidebar-mini">
    <div class="card">
        <form asp-action="frmnewsadd" asp-controller="News" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="id" hidden>
            <div class="card card-info">
                <div class="card-header">
                    <h2 class="card-title">เพิ่มข้อมูลข่าวประชาสัมพันธ์</h2>
                </div>
                <div class="card-body">
                    <!-- Main content -->
                    <section class="content">
                        <div class="container-fluid">
                            <div class="card card-default">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <label asp-for="titlename" for="inputEmail3"
                                            class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="titlename" class="form-control" />
                                            <span asp-validation-for="titlename" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">รายละเอียด</label>
                                        <div class="col-sm-10">
                                            <textarea id="summernote" asp-for="details">
                                            @Model.details
                                            </textarea>
                                            <span asp-validation-for="details" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Category" class="col-sm-2 col-form-label">หมวดหมู่</label>
                                        <div class="col-sm-10">
                                            <select asp-for="Category" class="form-control">
                                                <option value="ทั่วไป">ทั่วไป</option>
                                                <option value="กิจกรรม">กิจกรรม</option>
                                                <option value="ประกาศ">ประกาศ</option>
                                            </select>
                                            <span asp-validation-for="Category" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="BadgeText"
                                            class="col-sm-2 col-form-label">ข้อความแถบสถานะ</label>
                                        <div class="col-sm-10">
                                            <input asp-for="BadgeText" class="form-control"
                                                placeholder="เช่น 'ใหม่' หรือ 'ด่วน'" />
                                            <span asp-validation-for="BadgeText" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="BadgeClass" class="col-sm-2 col-form-label">สีแถบสถานะ
                                            (CSS)</label>
                                        <div class="col-sm-10">
                                            <select asp-for="BadgeClass" class="form-control">
                                                <option value="bg-danger">สีแดง (Danger)</option>
                                                <option value="bg-success">สีเขียว (Success)</option>
                                                <option value="bg-warning">สีเหลือง (Warning)</option>
                                                <option value="bg-info">สีฟ้า (Info)</option>
                                            </select>
                                            <span asp-validation-for="BadgeClass" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="BackgroundGradient" class="col-sm-2 col-form-label">สีพื้นหลัง
                                            Gradient</label>
                                        <div class="col-sm-10">
                                            <input asp-for="BackgroundGradient" class="form-control"
                                                placeholder="เช่น #007bff, หรือ linear-gradient(#f00, #fff)" />
                                            <span asp-validation-for="BackgroundGradient" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="image" class="col-sm-2 col-form-label">อัปโหลดรูปภาพหน้าปก
                                            (Cover)</label>
                                        <div class="col-sm-10">
                                            <input asp-for="ImageFile" type="file" class="form-control-file"
                                                accept="image/*" />
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="GalleryFiles" class="col-sm-2 col-form-label">รูปภาพแกลเลอรี
                                            (หลายภาพ)</label>
                                        <div class="col-sm-10">
                                            <input type="file" name="GalleryFiles" multiple class="form-control-file"
                                                accept="image/*" />
                                            <span class="text-muted small">เลือกไฟล์ได้หลายไฟล์พร้อมกัน</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div class="card-footer">
                        <button type="submit" value="Submit" class="btn btn-info">บันทึกข้อมูล</button>
                        <button asp-action="frmList" asp-controller="Admin"
                            class="btn btn-default float-right">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
<link type="text/css" href="~/css/css/ui-lightness/jquery-ui-1.8.10.custom.css" rel="stylesheet" />
<script type="text/javascript" src="~/js/jquery-1.4.4.min.js"></script>
<script type="text/javascript" src="~/js/jquery-ui-1.8.10.offset.datepicker.min.js"></script>
<script src="~/plugins/jquery/jquery.min.js"></script>
<script>$(function () {
        $('.select2').select2()
        $('#summernote').summernote()
    });
</script>